{
  "manifest_version": 3,
  "name": "IIRC",
  "version": "1.0",
  "description": "Get website recommendations using Gemini AI",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "downloads"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}